{
  "version": "0.0.2",
  "name": "hepa",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "name": "Carl Vitullo"
  },
  "repository": "vcarl/hepa",
  "dependencies": {
    "tslib": "^1.7.1"
  },
  "peerDependencies": {
    "prop-types": ">=15",
    "react": ">=15"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/moment": "^2.13.0",
    "@types/node": "^8.0.28",
    "@types/prop-types": "^15.5.1",
    "@types/react": "^16.0.5",
    "jest": "^21.1.0",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "rollup": "^0.50.0",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-typescript2": "^0.5.2",
    "ts-jest": "^21.0.1",
    "typescript": "^2.5.2"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js", "json"],
    "collectCoverageFrom": ["src/**/*.{ts,tsx}"],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/test/**/*.ts?(x)",
      "<rootDir>/test/**/?(*.)(spec|test).ts?(x)"
    ],
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"]
  },
  "scripts": {
    "test": "jest --env=jsdom",
    "start": "rollup -c -o index.js -w",
    "build": "rollup -c -o index.js",
    "clean": "rm ./*.d.ts; true"
  }
}
